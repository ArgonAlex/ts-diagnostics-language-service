{
	"compilerOptions": {
		"lib": ["es2015"],
		"module": "commonjs",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es2015"
	},
	"include": [
		"src/**/*"
	]
}